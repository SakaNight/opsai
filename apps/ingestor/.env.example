# Ingestor Service Environment Variables

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/opsai

# Redis Configuration
REDIS_URL=redis://:opsai123@localhost:6379

# Kafka/Redpanda Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=opsai-ingestor
KAFKA_GROUP_ID=opsai-ingestor-group

# Wikimedia Configuration
WIKIMEDIA_EVENTSTREAM_URL=https://stream.wikimedia.org/v2/stream/recentchange
WIKIMEDIA_POLL_INTERVAL=5000

# GitHub Configuration
GITHUB_API_URL=https://api.github.com
GITHUB_POLL_INTERVAL=30000
GITHUB_REPOS=kubernetes/kubernetes,redis/redis,nginx/nginx

# Event Processing Configuration
EVENT_BATCH_SIZE=100
EVENT_PROCESSING_INTERVAL=1000

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Service Configuration
SERVICE_PORT=3001
NODE_ENV=development
